modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["gitFull", "libxcrypt", "playwright-driver"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install fastapi uvicorn sqlalchemy psycopg2-binary python-jose[cryptography] passlib[bcrypt] python-multipart pydantic[email] && python main.py"
waitForPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
